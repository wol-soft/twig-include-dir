{
    "name": "wol-soft/twig-include-dir",
    "description": "Include all twig templates within a directory",
    "type": "library",
    "require": {
        "php": ">= 7.2",
        "twig/twig": ">= 2.7 < 4.0"
    },
    "autoload": {
        "psr-4": {
            "TwigIncludeDir\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TwigIncludeDir\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "wol-soft",
            "email": "enno.woortmann@web.de"
        }
    ]
}
